{
  "manifest_version": 3,
  "name": "Fake News Detector",
  "version": "1.0",
  "description": "Phát hiện tin tức giả từ các trang báo",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://vnexpress.net/*",
    "https://tienphong.vn/*",
    "https://tuoitre.vn/*",
    "https://kenh14.vn/*",
    "https://fakenews.omnituan.online/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://vnexpress.net/*",
        "https://tienphong.vn/*",
        "https://tuoitre.vn/*",
        "https://kenh14.vn/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fake News Detector",
    "default_icon": {
      "16": "icons/fakenews16.png",
      "48": "icons/fakenews48.png",
      "128": "icons/fakenews128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}